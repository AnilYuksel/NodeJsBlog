  <body>

    <%- include('../includes/nav.ejs') %>
      <form class="post-form" action="/add-post" method="post" enctype="multipart/form-data">
       <div class="container">
        <div class="col">
          <div class="row justify-content-center">
            <h3 class="header text-center m-3">Add Your Post</h3> 
          </div>
          <div class="row justify-content-center">
            <input type="text" class="form-control m-3 w-50" placeholder="Post Title*" name="postTitle">
          </div>
          <div class="row justify-content-center">
            <textarea type="text" class="form-control w-50" placeholder="Your Post*"
              rows="6" name="postText"></textarea>
          </div>
          <div class="row justify-content-center">
            <input type="file" class="form-control m-3 w-50" name="postImage">
          </div>
          <div class="row justify-content-center">
            <button type="submit" class="btn m-3 w-25">Submit</button>
          </div>
        </div>
      </div>
      </form>
      
