<%- include('../includes/head.ejs') %>
</head>
<body>
  <%- include('../includes/nav.ejs') %>

  <form class="post-form" action="/edit-post/:postId>" method="post" enctype="multipart/form-data">
    <div class="container">
     <div class="col">
       <div class="row">
         <h3 class="text-center m-3">Edit Your Post</h3>
       </div>
       <div class="row justify-content-center">
         <input type="text" class="form-control m-3 w-50" name="postTitle" value="<%= posts.postTitle %>">
       </div>
       <div class="row justify-content-center">
         <textarea type="text" class="form-control w-50"
           rows="6" name="postText"><%= posts.postText %></textarea>
       </div>
       <div class="row justify-content-center">
        <input type="file" class="form-control m-3 w-50" name="postImage">
      </div>
       <div class="row justify-content-center">
         <input type="hidden" value="<%= posts._id %>" name="postId">
         <button type="submit" class="btn w-25 m-3">Edit</button>
       </div>
     </div>
   </div>
   </form> 

<form action="/delete-post/<%= posts._id %>" method="post">
    <div class="container">
      <div class="col">
        <div class="row justify-content-center">
          <button href="/" class="btn w-25" type="submit">Delete</button>
      </div>
      </div>
    </div>  
</form>

    <%- include('../includes/end.ejs') %>


